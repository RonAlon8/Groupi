<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".Activities.MapsActivity" />


    <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:background="#00FFFFFF"
        android:src="@drawable/settings" />

    <ImageButton
        android:id="@+id/my_groups_button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/settings_button"
        android:background="#00FFFFFF"
        android:src="@drawable/my_groups" />

    <ImageButton
        android:id="@+id/add_group_button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/my_groups_button"
        android:background="#00FFFFFF"
        android:src="@drawable/add_group" />

    <ImageButton
        android:id="@+id/exit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="575dp"
        android:layout_toRightOf="@id/settings_button"
        android:src="@drawable/exitgroup" />

    <ImageButton
        android:id="@+id/join_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="575dp"
        android:layout_toRightOf="@id/settings_button"
        android:src="@drawable/joingroup" />

</RelativeLayout>
