<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.groupchatapp.Activities.MapWrapperLayout
        android:id="@+id/map_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activities.MapsActivity" />

        <ImageButton
        android:id="@+id/settings_button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="0dp"
        android:background="#00FFFFFF"
        android:src="@drawable/settings" />

    <ImageButton
        android:id="@+id/my_groups_button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/settings_button"
        android:background="#00FFFFFF"
        android:src="@drawable/my_groups" />

    <ImageButton
        android:id="@+id/add_group_button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/my_groups_button"
        android:background="#00FFFFFF"
        android:src="@drawable/add_group" />

    <ImageButton
        android:id="@+id/exit_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/exitgroup" />

    <ImageButton
        android:id="@+id/join_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/joingroup" />

    </com.example.groupchatapp.Activities.MapWrapperLayout>

</RelativeLayout>
