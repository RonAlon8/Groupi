<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toplayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dip"
        android:background="@drawable/rounded_layout"
        android:paddingBottom="5dip">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_of_group"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="5dp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/group_name_IW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:textColor="#575151"
                        android:textSize="20sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/group_description_IW_image"
                        android:layout_width="30dp"
                        android:layout_height="25dip"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/group_description" />

                    <TextView
                        android:id="@+id/group_description_IW"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:hint="no description"
                        android:textColor="#000000"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/participants_number_IW_image"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/my_groups"/>
                    <TextView
                        android:id="@+id/participants_number_IW"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center_vertical"
                        android:textColor="#000000"/>

                </LinearLayout>
            </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/join_group_button_IW"
            android:layout_width="85dip"
            android:layout_height="25dip"
            android:layout_marginTop="75dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_round_join_group"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="join group" />

        <Button
            android:id="@+id/exit_group_button_IW"
            android:layout_width="85dp"
            android:layout_height="25dip"
            android:layout_marginTop="75dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/button_round_exit_group"
            android:layout_marginEnd="5dp"
            android:textSize="14sp"
            android:text="exit group"/>


        <Button
            android:id="@+id/chat_IW"
            android:layout_width="55dip"
            android:layout_height="25dip"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/button_round"
            android:textSize="14sp"
            android:text="chat"/>

    </RelativeLayout>
</LinearLayout>
